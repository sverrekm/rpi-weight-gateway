# MQTT
MQTT_HOST=
MQTT_PORT=1883
MQTT_USER=
MQTT_PASS=
WEIGHT_TOPIC=weight/measure
STATUS_TOPIC=weight/status
CMD_TOPIC=weight/cmd

# GPIO & sampling
GPIO_DOUT=5
GPIO_SCK=6
SAMPLE_RATE=10
MEDIAN_WINDOW=5
SCALE=1.0
OFFSET=0.0
# Maximum capacity in grams (0 = unlimited; frontend will warn when exceeded)
MAX_CAPACITY_G=0.0

# Wi-Fi captive portal
WIFI_AP_SSID=WeightGateway-XXXX
WIFI_AP_PASS=weight1234
AP_COUNTRY=NO

# Demo mode (no hardware)
DEMO_MODE=false

# Display / Serial configuration (ND5052)
DISPLAY_ENABLED=false
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUD=9600
SERIAL_DATABITS=7
SERIAL_PARITY=E
SERIAL_STOPBITS=1
DISPLAY_DP=2
DISPLAY_UNIT=kg
DISPLAY_ADDR=
